{
  "name": "metric_cpu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:electron": "pnpm run transpile:electron; cross-env NODE_ENV=development electron .",
    "dev:react": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc -p src/electron/tsconfig.json && tsc -p src/electron/tsconfig.preload.json",
    "dist:mac": "pnpm run transpile:electron && pnpm run build && electron-builder --mac --arm64",
    "dist:win": "pnpm run transpile:electron && pnpm run build && electron-builder --win --x64",
    "dist:linux": "pnpm run transpile:electron && pnpm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "os-utils": "^0.0.14",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "24.13.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
